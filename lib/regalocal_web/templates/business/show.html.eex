<%= container :wide do %>
  <div class="relative bg-white">
    <div class="inset-0 hidden lg:block absolute">
      <div class="absolute inset-y-0 left-0 w-1/2 bg-primary-50"></div>
    </div>
    <div class="relative max-w-screen-xl mx-auto flex flex-col lg:flex-row">
      <div class="py-16 px-6 sm:px-6 lg:w-2/5 lg:px-8 lg:py-24 xl:pr-12 border-r border-primary-100 order-last lg:order-first">
        <div class="max-w-lg mx-auto">
          <h2 class="text-2xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-3xl sm:leading-9">
            <%=@business.name%>
          </h2>
          <p class="mt-3 text-lg leading-6 text-gray-500">
            <%=@business.story%>
          </p>
          <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
              <%= Business.picture(@business, 16) %>
            </div>
            <div class="ml-3">
              <p class="text-sm leading-5 font-medium text-gray-900 text-lg">
                <a href="<%=Routes.business_path(@conn, :show, @business)%>" class="hover:underline">
                  <%= @business.owner_name %>
                </a>
              </p>
            </div>
          </div>
          <dl class="mt-8 text-base leading-6 text-gray-500">
            <div>
              <dt class="sr-only"><%= gettext("Adreça") %></dt>
              <dd>
                <%= @business.billing_address %>
              </dd>
            </div>
            <div class="mt-6">
              <dt class="sr-only">
                <%= gettext("Phone number") %>
              </dt>
              <dd class="flex">
                <svg fill="currentColor" viewBox="0 0 20 20" class="w-8 h-8"><path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path></svg>
                <a href="tel:<%= @business.phone %>" class="ml-3">
                  <%= @business.phone %>
                </a>
              </dd>
            </div>
            <%= if @business.whatsapp do %>
              <div class="mt-3">
                <dt class="sr-only">WhatsApp</dt>
                <dd class="flex">
                  <svg fill="currentColor" viewBox="0 0 20 20" class="w-8 h-8"><path fill-rule="evenodd" d="M18 5v8a2 2 0 01-2 2h-5l-5 4v-4H4a2 2 0 01-2-2V5a2 2 0 012-2h12a2 2 0 012 2zM7 8H5v2h2V8zm2 0h2v2H9V8zm6 0h-2v2h2V8z" clip-rule="evenodd"></path></svg>
                  <a href="https://wa.me/34<%= @business.whatsapp %>" class="ml-3" rel="no-follow">
                    <%= @business.whatsapp %>
                  </a>
                </dd>
              </div>
            <% end %>
            <div class="mt-3">
              <dt class="sr-only">
                <%= gettext("Email") %>
              </dt>
              <dd class="flex">
                <svg fill="currentColor" viewBox="0 0 20 20" class="w-8 h-8"><path fill-rule="evenodd" d="M14.243 5.757a6 6 0 10-.986 9.284 1 1 0 111.087 1.678A8 8 0 1118 10a3 3 0 01-4.8 2.401A4 4 0 1114 10a1 1 0 102 0c0-1.537-.586-3.07-1.757-4.243zM12 10a2 2 0 10-4 0 2 2 0 004 0z" clip-rule="evenodd"></path></svg>
                <a href="mailto:<%= @business.email %>" class="ml-3" rel="no-follow">
                  <%= @business.email %>
                </a>
              </dd>
            </div>
            <div class="mt-10 text-sm text-gray-500 flex items-center justify-center">
              <%= if @business.website do %>
                <a href="<%=@business.website %>" rel="no-follow">
                  <svg class="fill-current" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M13.144 8.171c-.035-.066.342-.102.409-.102.074.009-.196.452-.409.102zm-2.152-3.072l.108-.031c.064.055-.072.095-.051.136.086.155.021.248.008.332-.014.085-.104.048-.149.093-.053.066.258.075.262.085.011.033-.375.089-.304.171.096.136.824-.195.708-.176.225-.113.029-.125-.097-.19-.043-.215-.079-.547-.213-.68l.088-.102c-.206-.299-.36.362-.36.362zm13.008 6.901c0 6.627-5.373 12-12 12-6.628 0-12-5.373-12-12s5.372-12 12-12c6.627 0 12 5.373 12 12zm-8.31-5.371c-.006-.146-.19-.284-.382-.031-.135.174-.111.439-.184.557-.104.175.567.339.567.174.025-.277.732-.063.87-.025.248.069.643-.226.211-.381-.355-.13-.542-.269-.574-.523 0 0 .188-.176.106-.166-.218.027-.614.786-.614.395zm6.296 5.371c0-1.035-.177-2.08-.357-2.632-.058-.174-.189-.312-.359-.378-.256-.1-1.337.597-1.5.254-.107-.229-.324.146-.572.008-.12-.066-.454-.515-.605-.46-.309.111.474.964.688 1.076.201-.152.852-.465.992-.038.268.804-.737 1.685-1.251 2.149-.768.694-.624-.449-1.147-.852-.275-.211-.272-.66-.55-.815-.124-.07-.693-.725-.688-.813l-.017.166c-.094.071-.294-.268-.315-.321 0 .295.48.765.639 1.001.271.405.416.995.748 1.326.178.178.858.914 1.035.898.193-.017.803-.458.911-.433.644.152-1.516 3.205-1.721 3.583-.169.317.138 1.101.113 1.476-.029.433-.37.573-.693.809-.346.253-.265.745-.556.925-.517.318-.889 1.353-1.623 1.348-.216-.001-1.14.36-1.261.007-.094-.256-.22-.45-.353-.703-.13-.248-.015-.505-.173-.724-.109-.152-.475-.497-.508-.677-.002-.155.117-.626.28-.708.229-.117.044-.458.016-.656-.048-.354-.267-.646-.53-.851-.389-.299-.188-.537-.097-.964 0-.204-.124-.472-.398-.392-.564.164-.393-.44-.804-.413-.296.021-.538.209-.813.292-.346.104-.7-.082-1.042-.125-1.407-.178-1.866-1.786-1.499-2.946.037-.19-.114-.542-.048-.689.158-.352.48-.747.762-1.014.158-.15.361-.112.547-.229.287-.181.291-.553.572-.781.4-.325.946-.318 1.468-.388.278-.037 1.336-.266 1.503-.06 0 .038.191.604-.019.572.433.023 1.05.749 1.461.579.